<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="#fffffe"
    tools:visibility="visible">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffc6c7"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/titreGestionDesFilms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="serif"
            android:text="Gestion des contacts"
            android:textAlignment="center"
            android:textColor="#172C66"
            android:textSize="30dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/sectionMenu"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/lister"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/turquoise"
            android:fontFamily="serif"
            android:text="Lister"
            android:textAlignment="center"
            android:textColor="#272343"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_categorie"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="serif"
            android:text="Lister par catégorie"
            android:textAlignment="center"
            android:textColor="#272343"
            android:textSize="20dp"
            android:textStyle="bold"
            android:backgroundTint="@color/turquoise" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/sectionDeuxMenu"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/afficherAjouter"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="serif"
            android:text="Ajouter"
            android:textAlignment="center"
            android:textColor="#272343"
            android:textSize="20dp"
            android:textStyle="bold"
            android:backgroundTint="@color/turquoise"/>

        <Button
            android:id="@+id/supprimer"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="serif"
            android:text="Supprimer"
            android:textAlignment="center"
            android:textColor="#272343"
            android:textSize="20dp"
            android:textStyle="bold"
            android:backgroundTint="@color/turquoise"/>

    </LinearLayout>


    <Spinner
        android:id="@+id/spinnerCategorie"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:textAlignment="center"
        tools:visibility="gone" />

    <LinearLayout
        android:id="@+id/layout_supprimer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:visibility="gone">

        <TextView
            android:id="@+id/numFilmSupprimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Numéro du film:"
            android:fontFamily="serif"
            android:textSize="15dp"/>

        <EditText
            android:id="@+id/NumSupp"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="number" />

        <Button
            android:id="@+id/a_supprimer"
            android:layout_width="69dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#272343"
            android:backgroundTint="@color/turquoise"
            android:text="Supprimer" />
    </LinearLayout>

    <TextView
        android:id="@+id/resultat"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:textStyle="bold"
        android:fontFamily="serif"
        android:textSize="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffc6c7"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/titreGestionInventaire"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="serif"
            android:text="Gestion de l'inventaire"
            android:textAlignment="center"
            android:textColor="#172C66"
            android:textSize="25dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/firstLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffc6c7"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/titreImage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Image"
            android:fontFamily="serif"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/titreNum"
            android:layout_width="12dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Num."
            android:fontFamily="serif"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/titreNom"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Nom"
            android:fontFamily="serif"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/titrePrenom"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Prénom"
            android:fontFamily="serif"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/titreTel"
            android:layout_width="4dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Téléphone"
            android:fontFamily="serif"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/listeFilm"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:background="#fffffe"
            android:gravity="center"
            android:hint="@string/liste_vide"
            android:inputType="text" />


        <LinearLayout
            android:id="@+id/sectionMenuViderQuitter"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/vider"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="serif"
                android:text="Vider"
                android:textAlignment="center"
                android:textColor="#272343"
                android:textSize="20dp"
                android:textStyle="bold"
                android:backgroundTint="@color/turquoise"/>

            <Button
                android:id="@+id/quitter"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="serif"
                android:text="Quitter"
                android:textAlignment="center"
                android:textColor="#272343"
                android:textSize="20dp"
                android:textStyle="bold"
                android:backgroundTint="@color/turquoise"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>